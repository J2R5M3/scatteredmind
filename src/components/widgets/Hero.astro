---
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';

import type { Hero as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,

  content = await Astro.slots.render('content'),
  actions = await Astro.slots.render('actions'),
  image = await Astro.slots.render('image'),

  id,
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<section class="relative">
  <div class="absolute inset-0 pointer-events-none">
    <div class="kintsugi-line h-1 w-1/4 top-1/4 left-0 -rotate-12"></div>
    <div class="kintsugi-line h-1.5 w-1/5 top-2/3 right-0 rotate-6"></div>
    <div class="kintsugi-line h-0.5 w-1/3 bottom-1/4 left-1/2 -rotate-3"></div>
  </div>
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <div class="text-center">
      <h1 class="text-7xl font-black text-white drop-shadow-accent md:text-8xl">Free and Open-Source</h1>
      <p class="mt-4 mx-auto max-w-3xl text-2xl font-light text-text-secondary drop-shadow-md md:text-3xl">
        Ready-to-use Template for your Startup, combining the power of Astro and Tailwind CSS.
      </p>
    </div>
    <div class="mt-8 flex flex-wrap justify-center gap-4">
      <a
        class="flex min-w-[200px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden h-14 px-8 bg-primary text-white text-2xl font-bold leading-normal tracking-wider pixel-button"
        href="#"
      >
        <span class="truncate">Get Started</span>
      </a>
      <a
        class="flex min-w-[200px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden h-14 px-8 bg-card-background text-text text-2xl font-bold leading-normal tracking-wider pixel-button border-4 border-card-border"
        href="#"
      >
        <span class="truncate">View on GitHub</span>
      </a>
    </div>
  </div>
</section>
