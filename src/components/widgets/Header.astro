---
import ToggleMenu from '~/components/ui/ToggleMenu.astro';

const links = [
  { text: 'About', href: '#' },
  { text: 'Projects', href: '#' },
  { text: 'Community', href: '#' },
  { text: 'Contact', href: '#' },
];
---

<header
  class="sticky top-0 z-50 flex items-center justify-between whitespace-nowrap border-b-4 border-card-border bg-background/80 px-10 py-4 backdrop-blur-sm"
>
  <!-- Logo -->
  <div class="flex items-center gap-3 text-4xl font-bold tracking-tighter text-text">
    <a href="/" class="flex items-center gap-3">
      <svg class="h-10 w-10 text-primary" fill="none" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 12H16V16H12V12Z" fill="currentColor"></path>
        <path d="M16 16H20V20H16V16Z" fill="currentColor"></path>
        <path d="M20 20H24V24H20V20Z" fill="currentColor"></path>
        <path d="M24 24H28V28H24V24Z" fill="currentColor"></path>
        <path d="M28 20H32V24H28V20Z" fill="currentColor"></path>
        <path d="M32 16H36V20H32V16Z" fill="currentColor"></path>
        <path d="M36 12H40V16H36V12Z" fill="currentColor"></path>
        <path d="M8 32H12V36H8V32Z" fill="currentColor"></path>
        <path d="M12 28H16V32H12V28Z" fill="currentColor"></path>
        <path d="M16 24H20V28H16V24Z" fill="currentColor"></path>
        <path d="M28 28H32V32H28V28Z" fill="currentColor"></path>
        <path d="M32 32H36V36H32V32Z" fill="currentColor"></path>
        <path d="M36 36H40V40H36V36Z" fill="currentColor"></path>
        <path d="M4 4H44V8H4V4Z" fill="currentColor"></path>
        <path d="M4 40H44V44H4V40Z" fill="currentColor"></path>
        <path d="M4 8H8V40H4V8Z" fill="currentColor"></path>
        <path d="M40 8H44V40H40V8Z" fill="currentColor"></path>
      </svg>
      <span class="drop-shadow-accent-sm">Scattered Minds</span>
    </a>
  </div>

  <!-- Desktop Navigation -->
  <nav class="hidden md:flex flex-1 justify-end gap-6">
    <div class="flex items-center gap-6 text-2xl">
      {
        links.map((link) => (
          <a class="text-base font-medium text-text-secondary hover:text-primary transition-colors" href={link.href}>
            {link.text}
          </a>
        ))
      }
    </div>
    <a
      class="flex min-w-[120px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden h-11 px-5 bg-primary text-white text-xl font-bold leading-normal tracking-wide pixel-button"
      href="#"
    >
      <span class="truncate">Join Discord</span>
    </a>
  </nav>

  <!-- Mobile Menu Toggle -->
  <div class="md:hidden">
    <ToggleMenu />
  </div>
</header>
