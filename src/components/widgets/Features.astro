const features = [
  {
    title: 'Tech for Shelter Animals',
    description:
      'Building accessible, open-source technology to improve the lives of shelter animals and support their caregivers.',
    icon: '<path d="M128 128h32v32h-32zM96 96h32v32H96zM96 160h32v32H96zM64 128h32v32H64zM160 96h32v32h-32zM32 32v192h192V32H32zm176 176H48V48h160v160z"></path>',
  },
  {
    title: 'A Supportive Community',
    description:
      'Fostering a welcoming community for scattered minds, promoting collaboration, shared learning, and mutual support.',
    icon: '<path d="M108 108 A 24 24 0 1 0 108 60 A 24 24 0 1 0 108 108 M 108 116 A 40 40 0 0 0 36 168 L 36 200 L 180 200 L 180 168 A 40 40 0 0 0 108 116 M 180 60 h 24 v 24 h -24 z M 180 100 h 40 v 24 h -40 z M 32 32 v 192 h 192 V 32 H 32 z m 176 176 H 48 V 48 h 160 v 160 z"></path>',
  },
  {
    title: 'Assistive Technology',
    description:
      'Developing assistive technologies to empower individuals with diverse cognitive styles and enhance their daily capabilities.',
